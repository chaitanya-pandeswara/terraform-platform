pipeline {
    
    agent any
    
    environment {
        AWS_DEFAULT_REGION="ap-south-1"
        AWS_CREDS=credentials('aws-chaitu')
    }

    stages {
        
        stage('Git Checkout') {
            steps {
                git branch: 'dev', credentialsId: 'github-chaitanya-pandeswara', url: 'https://github.com/chaitanya-pandeswara/online-boutique-platform-terraform.git'
            }
        }

        stage('Initializing Terraform') {
            steps {
                dir('dev') {
                    sh 'terraform init'
                }
            }
        }

        stage('Destroying Platform') {
            steps {
                dir('dev') {
                    sh 'terraform destroy -var-file=dev.tfvars -auto-approve'
                }
            }
        }
        
        stage('Destroying S3-DynamoDB') {
            steps {
                dir('/var/lib/jenkins/workspace/online-boutique-platform-terraform-create/s3-dynamodb') {
                    sh 'terraform destroy -auto-approve'
                }
            }
        }
    }
}